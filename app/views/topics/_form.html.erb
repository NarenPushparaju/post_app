<%= form_for(topic) do |f| %>
  <% if topic.errors.any? %>
    <% topic.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <div class="field form-group">
    <%= f.text_field :topic, class: "form-control", class: "col-xs-2", placeholder: "Type the topic" %><br>
  </div>
  <div class="field form-group">
    <%= f.submit button_label, class: 'btn btn-success' %>
  </div>
<% end %>