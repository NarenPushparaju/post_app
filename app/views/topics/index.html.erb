<h1>Topics</h1>
<table class="table">
<% @topics.each do |t| %>
  <%= link_to t.topic,topic_posts_path(topic_id: t.id) %><%= "(#{t.posts_count})" %><br>
    <%@post= t.posts%>
    <% @post.each_with_index  do |p,index| %>
      <% if index<=1 %>
      <li>
      <%=link_to p.title,topic_post_path(topic_id: p.topic_id,id: p.id) %><br>
      </li>
      <% end %>
      <% end %>
    <%= link_to "more..", topic_posts_path(t.id)%><br>
<% end %><br>
  <%= link_to "Add Topic",new_topic_path %>
</table>