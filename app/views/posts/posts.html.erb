<%provide(:page_title,"All Post") %>
<h1>Posts</h1>
<table class="table">
  <thead>
  <tr>
    <th>NAME</th>
    <th>DESCRIPTION</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |t|  %>
    <tr>
      <td><%= t.name %></td>
      <td><%= t.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>