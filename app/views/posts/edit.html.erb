<%= form_for @post do |f|%>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %></p>
  <p>
    <%= f.label :hastag %><br>
    <%= f.text_area :hastag %>
  </p>
  <p>
  <%= f.label :description %><br>
  <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :topic_id %><br>
