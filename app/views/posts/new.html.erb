<% provide(:page_title, 'New post') %>

<h1>New Post</h1>
<% if @post.errors.any?  %>
  <ul>
    <% @post.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <%end %>
  </ul>
<% end %>
<%= render :partial => "formm", :locals =>
    { :button_label => "Create Post", :topic => @topic ,:post => @post,flag: 1} %>
<div class="spinner"></div>