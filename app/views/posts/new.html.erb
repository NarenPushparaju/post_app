<h1>New Post</h1>
<% if @post.errors.any?  %>
  <ul>
    <% @post.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <%end %>
  </ul>
<% end %>
<%= form_for (@post) do |f|%>
  <p>
    <%= f.label :name,"Name" %><br>
    <%= f.text_field :name %></p>
  <p>
    <%= f.label :hastag %><br>
    <%= f.text_area :hastag %>
  </p>
  <p>
  <%= f.label :description %><br>
  <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :topic_id,"Topic-Id" %><br>
    <%= f.text_field :topic_id%>
  </p>
    <%= f.fields_for :comments do |builder|%>
      <fieldset>
    <%= builder.label :comment %><br>
      <%= builder.text_field :comment %>
      </fieldset>
      <% end %>
  <p>
    <%= f.submit class: "btn btn-success" %>
  </p>
<%end %>
